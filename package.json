{
  "name": "angular2-translator",
  "version": "1.3.0",
  "description": "A translate-service, translate-pipe and translate-component for angular2",
  "repository": {
    "type": "git",
    "url": "https://github.com/tflori/angular2-translator.git"
  },
  "scripts": {
    "test": "typings install && tsc && karma start && npm run map-coverage",
    "tslint": "tslint -c tslint.json --exclude=\"**/*.d.ts\" --exclude=\"node_modules/**/*.ts\" \"**/*.ts\"",
    "jslint": "jslint --nomen --indent 2 -- bundle.js karma.conf.js karma-test-shim.js",
    "start": "typings install && concurrently \"tsc -w\" \"karma start --no-single-run --auto-watch\"",
    "prepublish": "typings install && tsc && node bundle.js",
    "map-coverage": "remap-istanbul -i coverage/unmapped-json/coverage-final.json -o coverage/report-html -t html && remap-istanbul -i coverage/unmapped-json/coverage-final.json -o coverage/lcov.info -t lcovonly && remap-istanbul -i coverage/unmapped-json/coverage-final.json -o coverage/report.json -t json && remap-istanbul -i coverage/unmapped-json/coverage-final.json -t text-summary -o coverage/report-summary.txt && cat coverage/report-summary.txt && echo ''",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "tsc": "typings install && tsc"
  },
  "keywords": [
    "angular2",
    "translate",
    "i18n"
  ],
  "author": "Thomas Flori",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tflori/angular2-translator/issues"
  },
  "typescript": {
    "main": "./angular2-translator.ts"
  },
  "typings": "./angular2-translator.d.ts",
  "homepage": "https://github.com/tflori/angular2-translator",
  "peerDependencies": {
    "@angular/common": "2.*",
    "@angular/compiler": "2.*",
    "@angular/core": "2.*",
    "@angular/http": "2.*"
  },
  "devDependencies": {
    "@angular/common": "2.4.*",
    "@angular/compiler": "2.4.*",
    "@angular/core": "2.4.*",
    "@angular/http": "2.4.*",
    "@angular/platform-browser": "2.4.*",
    "@angular/platform-browser-dynamic": "2.4.*",
    "concurrently": "3.1.0",
    "es6-shim": "0.35.1",
    "jasmine-core": "2.4.1",
    "jslint": "^0.10.3",
    "karma": "1.3.0",
    "karma-chrome-launcher": "1.0.1",
    "karma-coverage": "1.1.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-jasmine": "1.0.2",
    "karma-spec-reporter": "0.0.26",
    "reflect-metadata": "^0.1.8",
    "remap-istanbul": "^0.8.4",
    "rxjs": "^5.0",
    "systemjs": "0.19.39",
    "systemjs-builder": "0.15.32",
    "tslint": "^3.14.0",
    "typescript": "^2.1",
    "typings": "^2.1",
    "zone.js": "^0.7"
  }
}
